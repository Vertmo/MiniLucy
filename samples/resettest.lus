node test1(r : bool) returns (y : int);
let
  reset
    y = 0 fby (y + 1);
  every r;
tel;
  
node test2() returns (y : int);
let
  reset
    y = 0 fby (y + 1);
  every false;
tel;
  
node test3(b : bool) returns (y : int);
let
  reset
    y = test2();
  every (true when True(b));
tel;
  
node test4(b : bool) returns (y : int);
let
  reset
    reset
      y = 0 fby (y + 1);
    every b;
  every false; (* TODO if (false when b) bad compilation *)
tel
